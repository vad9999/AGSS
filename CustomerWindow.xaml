<Window x:Class="AGSS.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGSS"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800" Background="Gray">
    <Grid>
        <DataGrid x:Name="Data" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="56,73,343,46"/>
        <ComboBox x:Name="ProjectCombo" HorizontalAlignment="Left" Margin="56,10,0,0" VerticalAlignment="Top" Width="253"/>
        <Button x:Name="ExitBTN" Content="Выйти" HorizontalAlignment="Left" Margin="668,10,0,0" VerticalAlignment="Top" Height="38" Width="104" Click="ExitBTN_Click"/>
        <TreeView x:Name="DataTree" Margin="475,63,0,0" Background="Gray" Height="220" VerticalAlignment="Top" HorizontalAlignment="Left" Width="297" SelectedItemChanged="DataTree_SelectedItemChanged">
            <TreeViewItem Header="Площадь">
                <TreeViewItem Header="Профиль">
                    <TreeViewItem Header="Канал 1"/>
                    <TreeViewItem Header="Канал 2"/>
                    <TreeViewItem Header="Канал 3"/>
                </TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Полёт">
                <TreeViewItem Header="Спектрометр">
                    <TreeViewItem Header="Метаданные"/>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
