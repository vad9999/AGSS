<Window x:Class="AGSS.AnalystWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGSS"
        mc:Ignorable="d"
        Title="AnalystWindow" Height="450" Width="800" Background="Gray">
    <Grid>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="CreateReportBTN" Content="Создать отчет" HorizontalAlignment="Left" Margin="0,22,0,0" VerticalAlignment="Top" Height="32" Width="122"/>
        <Button x:Name="SortBTN" Content="Сортировать данные" HorizontalAlignment="Left" Margin="248,22,0,0" VerticalAlignment="Top" Height="32" Width="152"/>
        <Button x:Name="CreateSheduleBTN" Content="Построить график" HorizontalAlignment="Left" Height="32" Margin="122,22,0,0" VerticalAlignment="Top" Width="126"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,54,400,0"/>
        <ComboBox HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
